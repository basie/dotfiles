bar {
        status_command i3status
        colors {
                background $base00
                statusline $base05
                separator $base02
                focused_workspace $base04 $base09 $base07
                inactive_workspace $base03 $base01 $base03
                urgent_workspace $base04 $base08 $base07
        }
        mode hide
        hidden_state hide
}

# No title bars
default_border pixel
